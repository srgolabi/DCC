<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox style="-fx-background-color: #CFD8DC;" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="metting.fxml.simpleSearch.FXMLSimpleSearchController">
   <children>
      <VBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" spacing="12.0" style="-fx-font-family: &quot;B Yekan&quot;; -fx-font-size: 14; -fx-border-color: transparent  transparent  transparent  #90A4AE;">
         <children>
            <RadioButton fx:id="andicator_number" focusTraversable="false" mnemonicParsing="false" selected="true" text="شماره اندیکاتور">
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="metting_number" focusTraversable="false" mnemonicParsing="false" text="شماره نامه" toggleGroup="$toggleGroup" />
            <RadioButton fx:id="metting_subject" focusTraversable="false" mnemonicParsing="false" text="موضوع نامه" toggleGroup="$toggleGroup" />
         </children>
         <padding>
            <Insets bottom="10.0" left="7.0" top="10.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" nodeOrientation="RIGHT_TO_LEFT" spacing="9.0">
         <children>
            <TextField fx:id="searchText" alignment="CENTER" focusTraversable="false" prefWidth="160.0" promptText="مقدار مورد نظر را ئارد نمایید" style="-fx-font-family: &quot;B Yekan&quot;;" />
            <HBox alignment="CENTER" spacing="3.0" style="-fx-font-family: &quot;B Yekan&quot;;">
               <children>
                  <Button fx:id="end" focusTraversable="false" mnemonicParsing="false" prefWidth="36.0" text="&gt;&gt;">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="searchNext" focusTraversable="false" mnemonicParsing="false" prefWidth="26.0" text="&gt;">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="searchBack" focusTraversable="false" mnemonicParsing="false" prefWidth="26.0" text="&lt;">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="first" focusTraversable="false" mnemonicParsing="false" prefWidth="36.0" text="&lt;&lt;" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="submit" defaultButton="true" focusTraversable="false" mnemonicParsing="false" prefWidth="50.0" text="قبول" />
                  <Label fx:id="searchResault" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-font-family: &quot;B Yekan&quot;;" textFill="#607d8b" wrapText="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" right="9.0" top="10.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</HBox>
